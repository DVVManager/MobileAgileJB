<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="org.agileboard.steps.TaskFlowSteps,org.agileboard.appdriver.DriverProvider,
    org.agileboard.appdriver.TestBase,org.agileboard.pages.*,org.agileboardstories.stories.AgileBoardStory"/>

    <bean id="provider" class="org.agileboard.appdriver.DriverProvider" scope="singleton">
    </bean>

    <bean id="steps" class="org.agileboard.steps.TaskFlowSteps">
    </bean>

    <!--<context:property-placeholder location="classpath:Data.properties" />-->

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>config.properties</value>
        </property>
    </bean>

</beans>